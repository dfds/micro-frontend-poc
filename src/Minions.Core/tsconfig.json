{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es2017", "es7", "es6", "dom" ],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "jsx": "react",
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}